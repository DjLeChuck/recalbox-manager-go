doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= .RecalboxManagerTitle
    link(rel="shortcut icon" type="image/x-icon" href="/static/favicon.png")
    link(rel="stylesheet" href="/static/css/bootstrap.min.css")
    link(rel="stylesheet" href="/static/css/fa-svg-with-js.css")
    link(rel="stylesheet" href="/static/css/style.css")
  body
    header
      nav.navbar.navbar-expand-xl.navbar-dark.fixed-top.bg-dark
        a.navbar-brand(href=(urlpath "login")) {{ .RecalboxManagerTitle }}

        .navbar-nav.mr-auto
          include templates/partials/language-menu.pug

    main.container
      block content

    footer.footer
      nav.navbar.navbar-light.bg-light
        .navbar-nav.mr-auto
          span.navbar-text
            em {{ .AppVersion }} alpha
        if .NeedAuth
          .navbar-nav
            a.nav-link(href=(urlpath "login"))
              i.fas.fa-sign-in-alt.fa-lg
              |  Connexion

    block js
      script(src="/static/js/jquery-3.3.1.min.js")
      script(src="/static/js/bootstrap.bundle.min.js")
      script(src="/static/js/fontawesome.min.js")
      script(src="/static/js/fa-solid.min.js")
